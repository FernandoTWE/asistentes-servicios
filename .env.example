# Directus Configuration
PUBLIC_DIRECTUS_URL=https://directus.your-domain.com
PUBLIC_DIRECTUS_TOKEN=your-directus-token
PUBLIC_DIRECTUS_DEFAULT_LANG="es"

# Collections and Fields
PUBLIC_ARTICLES_COLLECTION="articles"
PUBLIC_ARTICLES_TITLE_FIELD="title"
PUBLIC_ARTICLES_CONTENT_FIELD="content"
PUBLIC_ARTICLES_TRANSLATIONS_FIELD="translations"

# Perplexity Configuration
PUBLIC_PERPLEXITY_API_KEY=your_perplexity_api_key_here

# OpenAI Configuration
PUBLIC_OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL="gpt-3.5-turbo"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500
OPENAI_SYSTEM_PROMPT="Eres un asistente virtual amigable que ayuda a responder preguntas sobre servicios."

# API Configuration
PUBLIC_API_PAGE_LIMIT="10"
PUBLIC_SEARCH_MIN_CHARS=3

# n8n Configuration
N8N_WEBHOOK_URL=https://n8n.your-domain.com/webhook/123456
N8N_AUTH_TOKEN=your-n8n-token

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-token
